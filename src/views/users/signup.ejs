<%- include('../partials/header'); %>
<%- include('../partials/errors'); %>

<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card">
            <div class="card-header">account register</div>
            <div class="card-body">
                <form action="/users/signup" method="POST">
                    <div class="form-group">
                        <input autofocus type="text" class="form-control" name="name" placeholder="Name" 
                        <%= "value=" %>
                        <% if (typeof name == "undefined") { %>
                        <%= '' %>
                        <% } else { %>
                        <%= name %>
                        <% } %>
                        >
                    </div>
                    <div class="form-group">
                        <input type="email" class="form-control" name="email" placeholder="Email" 
                        <%= "value=" %>
                        <% if (typeof email == "undefined") { %>
                        <%= '' %>
                        <% } else { %>
                        <%= email %>
                        <% } %>
                        >
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" name="password" placeholder="Password"
                        <%= "value=" %>
                        <% if (typeof password == "undefined") { %>
                        <%= '' %>
                        <% } else { %>
                        <%= password %>
                        <% } %>
                        >
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" name="confirm_password" placeholder="Password"
                        <%= "value=" %>
                        <% if (typeof confirm_password == "undefined") { %>
                        <%= '' %>
                        <% } else { %>
                        <%= confirm_password %>
                        <% } %>
                        >
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary btn-block">Sign up</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer'); %>